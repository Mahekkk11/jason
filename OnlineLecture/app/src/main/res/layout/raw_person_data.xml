<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:layout_margin="7dp"
    android:padding="5dp"
    android:id="@+id/mainCardView"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/raw_border_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/imgProfile"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/centerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_toStartOf="@id/viewDelete"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User First name"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:id="@+id/txtUserFName"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Last name"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:id="@+id/txtUserLName"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            android:padding="2dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/viewDelete"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
