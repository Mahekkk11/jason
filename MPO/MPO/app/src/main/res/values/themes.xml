        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="android:lineSpacingExtra">@dimen/_1sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <!--<item name="android:textColorHint">@color/colorGray</item>-->
    </style>

