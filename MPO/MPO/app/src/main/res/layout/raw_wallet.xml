<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTitle"
                style="@style/Text12RegularBlackStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/txtTotalAmount"
                android:text="@string/dummy_payment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTotalAmount"
                style="@style/Text12RegularBlackStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/dummy_payment" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDateOrderId"
            style="@style/Text12BoldGrayStyle"
            android:layout_marginTop="@dimen/_minus5sdp"
            android:text="@string/dummy_payment" />

    </LinearLayout>

    <View style="@style/HorizontalViewGrayStyle"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_height="0.5dp"/>

</LinearLayout>