<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:focusable="false"
    app:cardCornerRadius="@dimen/_4sdp"
    android:focusableInTouchMode="true"
    app:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_3sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitle"
            style="@style/Text12RegularBlackStyle"
            android:text="@string/dummy_payment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSubTitle"
            style="@style/Text10RegularBlackStyle"
            android:singleLine="false"
            android:layout_marginTop="@dimen/_minus7sdp"
            android:text="@string/dummy_payment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTime"
            style="@style/Text10RegularGrayStyle"
            android:layout_marginTop="@dimen/_minus5sdp"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:text="@string/dummy_payment" />

    </LinearLayout>

    <View
        style="@style/HorizontalViewGrayStyle"
        android:layout_height="0.5dp"
        android:paddingBottom="@dimen/_2sdp" />

</androidx.cardview.widget.CardView>